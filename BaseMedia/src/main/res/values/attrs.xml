<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EasyVideoPlayer">
        <attr name="video_full_screen_enable" format="boolean"></attr>
        <!--全屏后是否可以竖屏-->
        <attr name="video_full_screen_portrait">
            <!--自动判断(宽高比是否可以竖屏)-->
            <enum name="auto" value="0" />
            <!--可以竖屏(2个横屏，一个竖屏)-->
            <enum name="yes" value="1" />
            <!--不可以竖屏(2个横屏)-->
            <enum name="no" value="2" />
            <!--只能单一横屏 -->
            <enum name="only" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="BaseEasyVideoPlay">
        <attr name="android:background"></attr>
        <attr name="video_manage_tag" format="string"></attr>
        <!--是否缓存进度-->
        <attr name="video_is_save_progress" format="boolean"></attr>
        <attr name="video_display_type">
            <!--Video大小适配视频-->
            <enum name="adapter" value="0" />
            <!--填充整个父View-->
            <enum name="match_parent" value="1" />
            <!--充满剪切-->
            <enum name="match_crop" value="2" />
            <!--原始大小-->
            <enum name="original" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="BaseEasyMusicPlay">
        <attr name="music_manage_tag" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="EasyLoaddingView">
        <attr name="loadding_line_color" format="color" />
        <attr name="loadding_bg_line_color" format="color" />
        <attr name="loadding_text_color" format="color" />
        <attr name="loadding_line_width" format="dimension" />
        <attr name="loadding_bg_line_width" format="dimension" />
        <attr name="loadding_text_size" format="dimension" />
    </declare-styleable>
</resources>